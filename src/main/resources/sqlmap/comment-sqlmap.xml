<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sqlMap
PUBLIC "-//iBATIS.com//DTD SQL Map 2.0//EN"
"http://www.ibatis.com/dtd/sql-map-2.dtd">
<sqlMap namespace="Comment">
    <!-- Alias Map Defined -->
    <typeAlias alias="CommentQuery" type="com.ideax.project1.query.CommentQuery" />
    <typeAlias alias="Comment" type="com.ideax.project1.pojo.Comment" />
    <resultMap id="comment" class="Comment">
                    <result property="id" column="id" />
                    <result property="newsId" column="news_id" />
                    <result property="content" column="content" />
                    <result property="createTime" column="create_time" />
                    <result property="replyTo" column="reply_to" />
                    <result property="device" column="device" />
                    <result property="ip" column="ip" />
                    <result property="modifyTime" column="modify_time" />
            </resultMap>
    <!-- Select SQL -->
    <sql id="comment.selector">
        SELECT id,news_id,content,create_time,reply_to,device,ip,modify_time FROM comment
    </sql>
    <sql id="commentList.where">
		<dynamic prepend=" WHERE ">
            <isNotNull property="id" prepend=" AND ">id=#id#</isNotNull><isNotNull property="newsId" prepend=" AND ">news_id=#newsId#</isNotNull><isNotNull property="content" prepend=" AND ">content=#content#</isNotNull><isNotNull property="createTime" prepend=" AND ">create_time=#createTime#</isNotNull><isNotNull property="replyTo" prepend=" AND ">reply_to=#replyTo#</isNotNull><isNotNull property="device" prepend=" AND ">device=#device#</isNotNull><isNotNull property="ip" prepend=" AND ">ip=#ip#</isNotNull><isNotNull property="modifyTime" prepend=" AND ">modify_time=#modifyTime#</isNotNull>        </dynamic>
    </sql>
    <sql id="commentList.order">
        <dynamic prepend=" ORDER BY ">
            <isNotEmpty property="orderFields">
                <iterate property="orderFields" conjunction="," open="" close="">$orderFields[].fieldName$ $orderFields[].order$</iterate>
            </isNotEmpty>
        </dynamic>
    </sql>
            <select id="Comment.getComment" resultMap="comment">
            <include refid="comment.selector" />
            WHERE id=#id#
        </select>
                <select id="Comment.getCommentsByKeys" resultMap="comment">
            <include refid="comment.selector" />
            WHERE id in
            <iterate conjunction="," open="(" close=")" property="keys">#keys[]#</iterate>
        </select>
                <delete id="Comment.deleteByKey">
            DELETE FROM comment WHERE id = #key#
        </delete>
                <delete id="Comment.deleteByKeys">
            DELETE FROM comment
            WHERE id in
            <iterate conjunction="," open="(" close=")" property="keys">
                #keys[]#
            </iterate>
        </delete>
                                <update id="Comment.updateCommentsByKeys" parameterClass="Comment">
            UPDATE comment SET 
                                                                            <isNotNull prepend="," property="newsId">
                        news_id = #newsId#
                    </isNotNull>
				                                                <isNotNull prepend="," property="content">
                        content = #content#
                    </isNotNull>
				                                                                            <isNotNull prepend="," property="replyTo">
                        reply_to = #replyTo#
                    </isNotNull>
				                                                <isNotNull prepend="," property="device">
                        device = #device#
                    </isNotNull>
				                                                <isNotNull prepend="," property="ip">
                        ip = #ip#
                    </isNotNull>
				                            					<dynamic prepend=",">
						modify_time=UNIX_TIMESTAMP()
					</dynamic>
                                        WHERE id in
            <iterate conjunction="," open="(" close=")" property="keys">
                #keys[]#
            </iterate>
        </update>
        <update id="Comment.updateComment" parameterClass="Comment">
            UPDATE comment SET modify_time=UNIX_TIMESTAMP()
                                                                            <isNotNull prepend="," property="newsId">
                        news_id = #newsId#
                    </isNotNull>
                                                                <isNotNull prepend="," property="content">
                        content = #content#
                    </isNotNull>
                                                                                            <isNotNull prepend="," property="replyTo">
                        reply_to = #replyTo#
                    </isNotNull>
                                                                <isNotNull prepend="," property="device">
                        device = #device#
                    </isNotNull>
                                                                <isNotNull prepend="," property="ip">
                        ip = #ip#
                    </isNotNull>
                                                                    WHERE id = #id#
        </update>
            <select id="Comment.getCommentListWithPage" parameterClass="CommentQuery" resultMap="comment">
        <include refid="comment.selector" />
        <include refid="commentList.where" />
        <include refid="commentList.order" />
        LIMIT #startRow#,#pageSize#
    </select>
    <select id="Comment.getCommentListCount" parameterClass="CommentQuery" resultClass="int">
        SELECT count(*) FROM comment
        <include refid="commentList.where" />
    </select>
        <select id="Comment.getCommentList" parameterClass="CommentQuery" resultMap="comment">
        <include refid="comment.selector" />
        <include refid="commentList.where" />
        <include refid="commentList.order" />
    </select>
