        <insert id="Comment.insertComment" parameterClass="Comment">
        INSERT INTO comment
        <dynamic prepend="(" close=")">
                                                                            <isNotEmpty prepend="," property="newsId">
                        news_id
                    </isNotEmpty >
                                                                <isNotEmpty prepend="," property="content">
                        content
                    </isNotEmpty >
                                                                <isNotEmpty prepend="," property="createTime">
                        create_time
                    </isNotEmpty >
                                                                <isNotEmpty prepend="," property="replyTo">
                        reply_to
                    </isNotEmpty >
                                                                <isNotEmpty prepend="," property="device">
                        device
                    </isNotEmpty >
                                                                <isNotEmpty prepend="," property="ip">
                        ip
                    </isNotEmpty >
                                                                <isNotEmpty prepend="," property="modifyTime">
                        modify_time
                    </isNotEmpty >
                                    </dynamic>
        VALUES
        <dynamic prepend="(" close=")">
                                                                                                        <isNotEmpty  prepend="," property="newsId">
                                #newsId#
                            </isNotEmpty >
                                                                                                                <isNotEmpty  prepend="," property="content">
                                #content#
                            </isNotEmpty >
                                                                                                            <isNotEmpty  prepend="," property="createTime">
                            ,UNIX_TIMESTAMP()
                        </isNotEmpty >
                                                                                                                    <isNotEmpty  prepend="," property="replyTo">
                                #replyTo#
                            </isNotEmpty >
                                                                                                                <isNotEmpty  prepend="," property="device">
                                #device#
                            </isNotEmpty >
                                                                                                                <isNotEmpty  prepend="," property="ip">
                                #ip#
                            </isNotEmpty >
                                                                                                            <isNotEmpty  prepend="," property="modifyTime">
                            ,UNIX_TIMESTAMP()
                        </isNotEmpty >
                                                            </dynamic>
        <selectKey resultClass="int" type="post" keyProperty="id">
            SELECT last_insert_id() AS id
        </selectKey>
    </insert>
</sqlMap>
